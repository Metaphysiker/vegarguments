<% if @arguments.nil? %>
    No results found!
<% elsif @arguments.empty? %>
    No results found!
<% else %>

    <% @arguments.each do |result| %>

        <% if result.searchable_type == "Argument" %>
          <% argument = Argument.find(result.searchable_id) %>
          <%= argument.question %>
          <%= argument.argument %>

          <% elsif result.searchable_type == "Question" %>
            <% question = Question.find(result.searchable_id) %>
            <%= question.question %>
            <%= question.arguments.first.argument %>
        <% end %>

    <% end %>
<% end %>